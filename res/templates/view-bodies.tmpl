<table class="bodies-table">

{{ $nots := false }}
{{ range $i, $v := . }}
    {{ if ($v.Notes) | and (ne $v.Notes "") }}
        {{ $nots = true }}
        {{ break }}
    {{ end }}
{{ end }}

<caption style="text-align: center;">
    {{ if not $nots }}
        <!-- <span style="color: white; background-color: gray; font-size: larger;">Notable Objects</span> -->
    {{ else }}
        <span style="color: black; background-color: yellow; font-size: larger;">Notable Objects&nbsp;<span class="char-in-circle">&gt;</span></span>
        <table class="hint-table">
            <thead>
                <tr>
                    <th style="text-align: center;">BodyName</th>
                    <th style="text-align: center;">Notes</th>
                </tr>
            <thead>
            <tbody>
            {{ range $i, $v := . }}
                {{ if ($v.Notes) | and (ne $v.Notes "") }}
                <tr>
                    <td style="text-align: right;"><b>{{ $v.NotesName }}</b></td>
                    <td style="text-align: left;"><i>{{ $v.Notes }}</i></td>
                </tr>
                {{ end }}
            {{ end }}
            </tbody>
        </table>
    {{ end }}
</caption>

<thead>
    <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Dist(Ls)</th>
        <th>DMTL</th>
        <th>Rad &oplus;</th>
        <th>Mass &oplus;</th>
        <th>Temp &deg;&#8490;</th>
        <th>Grav(G)</th>
        <th>Rs(N/R)</th>
        <th>Atmo</th>
        <th>BGGHO</th>
    </tr>
</thead>

{{ $odd := false }}
<tbody>
{{ range $i, $v := . }}
    {{ if $v.Name }}
    {{ if $odd }}
    <tr class="odd">
    {{ else }}
    <tr class="even">
    {{ end }}
    {{ $odd = not $odd }}
    <td><font color="gray"><i>{{ $v.Name }}</i></font></td>
    <td><font color="{{ $v.Type.Color }}">{{ $v.Type.Type }}</font></td>
    <td>{{ $v.DistanceLs }}</td>
    <td>{{ range $j, $dmtl := $v.DMTL }}<font color="{{ $dmtl.Color }}">{{ $dmtl.Type }}</font>{{ end }}</td>
    <td>{{ $v.RadiusE }}</td>
    <td>{{ $v.MassE }}</td>
    <td>{{ $v.TemperatureK }}</td>
    <td>{{ $v.GravityG }}</td>
    <td>{{ $v.Rings }}</td>
    <td><font color="{{ $v.Atmosphere.Color }}">{{ $v.Atmosphere.Type }}</font></td>
    <td>{{ range $k, $sig := $v.Signals }}<font color="{{ $sig.Color }}">{{ $sig.Type }}</font>{{ end }}</td>
    </tr>
    {{ end }}
{{ end }}
</tbody>

</table>
