<table class="signals-table">

<caption>
</caption>

<thead>
    <tr>
        <th style="text-align: right; width: 10%;">What/Where</th>
        <th style="text-align: center; width: 20%;">Signal&nbsp;Type</th>
        <th style="text-align: left;">Description</th>
    </tr>
</thead>

{{ $odd := false }}
<tbody>
{{ range $i, $v := . }}
    {{ if $odd }}
    <tr class="odd">
    {{ else }}
    <tr class="even">
    {{ end }}
    {{ $odd = not $odd }}
        <td style="text-align: right; font-weight: bold;">{{ $v.Name }}</td>
        <td style="text-align: center;">{{ $v.Type }}</td>
        {{ if ne $v.Hints "" }}
            <td style="text-align: left;">{{ $v.Description }}&nbsp;<span class="char-in-circle">&crarr;</span>
            {{ $v.Hints }}
        {{ else }}
            <td style="text-align: left;">{{ $v.Description }}
        {{ end }}
        </td>
    </tr>
{{ end }}
</tbody>
</table>
