<div class="stars-div">
{{ range $i, $v := . }}
    <div class="star-div" style="background-color: {{ $v.Type.Color }}">
        <div class="star-div-text">
            <table style="padding: 0; margin: 0; border-spacing: 0; border-collapse: collapse;">
            <tbody>
            <tr>
                <td style="text-align: center; border: 1px dotted black; border-radius: 5px;"><i><b>
                {{ $v.Name }}
                {{ if $v.Discovered }}
                    (&copy;)
                {{ end }}
                </b></i></td>
            </tr>
            <tr>
                <td><b>{{ $v.Type.Type }}&nbsp;{{ $v.Subclass }}&nbsp;{{ $v.Luminosity }}</b><td>
            </tr>
            <tr>
                <td>{{ $v.RadiusS }}&nbsp;<font size="smaller"><i>R&#9737;</i></font></td>
            </tr>
            <tr>
                <td>{{ $v.MassS }}&nbsp;<font size="smaller"><i>M&#9737;</i></font></td>
            </tr>
            <tr>
                <td>{{ $v.TemperatureK }}&nbsp;<font size="smaller"><i>&deg;&#8490;</i></font></td>
            </tr>
            {{ if $v.Rings }}
            <tr>
                <td>{{ $v.Rings }}&nbsp;<font size="smaller"><i>R(n/ls)</i></font></td>
            </tr>
            <tr>
            </tr>
            {{ end }}
            </tbody>
            </table>
        </div>
    </div>
{{ end }}
</div>
