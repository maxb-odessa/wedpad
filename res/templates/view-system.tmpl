<table class="stars-table">
<caption class="stars-caption">
    {{ .SystemName }}
</caption>
<thead>
    <tr class="stars-th">
        <th id="stars-type">Type,</th>
        <th id="stars-subclass">C</th>
        <th id="stars-luminosity">L</th>
        <th>Dist(Ls)</th>
        <th>Rad(Sol)</th>
        <th>Mass(Sol)</th>
        <th>Temp(K)</th>
        <th>Rings</th>
        <th>RingRad(Ls)</th>
        <th>Disco</th>
    </tr>
</thead>

<tbody>
{{- $odd := false}}
{{ range $i, $v := .Data }}
    {{ $odd = not $odd }}
    {{ if $odd }}
    <tr id="tr-odd">
    {{ else }}
    <tr id="tr-even">
    {{ end }}
        <td id="stars-type"><font color="{{$v.Type.Color}}">{{ $v.Type.Str }}</font></td>
        <td id="stars-subclass"><font color="{{$v.Type.Color}}">{{ $v.Subclass }}</font></td>
        <td id="stars-luminosity"><font color="{{$v.Type.Color}}">{{ $v.Luminosity }}</font></td>
        <td>{{ $v.DistanceLs }}</td>
        <td>{{ $v.RadiusS }}</td>
        <td>{{ $v.MassS }}</td>
        <td>{{ $v.TemperatureK }}</td>
        <td>{{ $v.RingsNum }}</td>
        <td>{{ $v.RingsRadiusLs }}</td>
        <td>{{ $v.Discovered.Str }}</td>
    </tr>
{{ end }}
</tbody>

</table>
