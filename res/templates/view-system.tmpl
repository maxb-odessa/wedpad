<div class="stars-div">
{{ range $i, $v := . }}
    <div class="star-div" style="background-color: {{ $v.Type.Color }}">
        <div class="star-div-text">
            <table>
            <tbody>
            <tr>
                <td><i><u>{{ $v.Name }}</u></i></td>
                {{ if $v.Discovered }}
                    <td style="text-align: left;"><font style="font-size: x-small;"><i>(Discovered)</i></font></td>
                {{ end }}
            </tr>
            <tr>
                <td><b>{{ $v.Type.Type }} {{ $v.Subclass }}</b></td><td>{{ $v.Luminosity }}<td>
            </tr>
            <tr>
                <td><font style="font-size: smaller;"><i>Rad(S):</i></font></td><td>{{ $v.RadiusS }}</td>
            </tr>
            <tr>
                <td><font style="font-size: smaller;"><i>Mass(S):</i></font></td><td>{{ $v.MassS }}</td>
            </tr>
            <tr>
                <td><font style="font-size: smaller;"><i>Temp(K):</i></font></td><td>{{ $v.TemperatureK }}</td>
            </tr>
            {{ if $v.Rings }}
            <tr>
                <td><font style="font-size: smaller;"><i>Rings:</i></font></td><td>{{ $v.Rings }}</td>
            </tr>
            {{ end }}
            </tbody>
            </table>
        </div>
    </div>
{{ end }}
</div>
